<UserControl x:Class="Aurora.Client.WpfApplication.MVVM.View.EditProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Aurora.Client.WpfApplication.MVVM.View" 
             xmlns:viewmodel="clr-namespace:Aurora.Client.WpfApplication.MVVM.ViewModel" 
             xmlns:usercontrols="clr-namespace:Aurora.Client.WpfApplication.UserControls"
             d:DataContext="{d:DesignInstance Type=viewmodel:EditProfileViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Border CornerRadius="15"
        Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Your Profile"
                   Margin="20 0 0 0"
                   VerticalAlignment="Bottom"
                   FontSize="35"
                   FontWeight="DemiBold"/>
            <Button Width="100"
                Height="35"
                Style="{StaticResource LowCornerRadiusButtonTheme}"
                Content="Save Changes"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0 0 20 3"
                Foreground="White"
                Background="#3AB19B"
                FontWeight="SemiBold"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="185"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Width="160" 
                            Height="160"
                            CornerRadius="25"
                            Margin="0 10 0 0"
                            SnapsToDevicePixels="True"
                            RenderOptions.BitmapScalingMode="Fant"> 
                        <Border.Background>
                            <ImageBrush ImageSource="/Images/default_user_image.png" 
                                        Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Button Style="{StaticResource CircleButtonTheme}"
                        Width="50"
                        Height="50"
                        Background="#14B8A6"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0 0 30 20">
                        <Image Source="/Images/camera.png"
                           Width="30"
                           Height="30"/>
                    </Button>

                    <StackPanel Grid.Row="1" Margin="15 0 0 0"
                                    >
                        <Button Style="{StaticResource HomeButtonOptionStyle}" 
                                Height="30"
                                Margin="0 0 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Images/pen.png"
                                       Grid.Column="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="4"/>
                                <TextBlock Grid.Column="1"
                                       Text="Personal Info"
                                       Foreground="#4B5563"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="15"
                                       FontWeight="Light"
                                       Margin="4"/>
                            </Grid>
                        </Button>
                        <Button Style="{StaticResource HomeButtonOptionStyle}" 
                            Height="30"
                            Margin="0 15 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Images/shield.png"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="4"/>
                                <TextBlock Grid.Column="1"
                                       Text="Privacy"
                                       Foreground="#4B5563"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="15"
                                       FontWeight="Light"
                                       Margin="4"/>
                            </Grid>
                        </Button>
                        <Button Style="{StaticResource HomeButtonOptionStyle}" 
                            Height="30"
                            Margin="0 15 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Images/lock.png"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="4"/>
                                <TextBlock Grid.Column="1"
                                       Text="Security"
                                       Foreground="#4B5563"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="15"
                                       FontWeight="Light"
                                       Margin="4"/>
                            </Grid>
                        </Button>
                        <Button Style="{StaticResource HomeButtonOptionStyle}" 
                            Height="30"
                            Margin="0 15 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="/Images/archive.png"
                                   Grid.Column="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="4"/>
                                <TextBlock Grid.Column="1"
                                       Text="Archive"
                                       Foreground="#4B5563"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontSize="15"
                                       FontWeight="Light"
                                       Margin="4"/>
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
