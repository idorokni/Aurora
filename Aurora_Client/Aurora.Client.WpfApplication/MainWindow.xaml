<Window x:Class="Aurora.Client.WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aurora.Client.WpfApplication" 
        xmlns:viewModel="clr-namespace:Aurora.Client.WpfApplication.MVVM.ViewModel"
        xmlns:userControls="clr-namespace:Aurora.Client.WpfApplication.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border Background="#0E0F0F" CornerRadius="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.18*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.13*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Background="Transparent"
                        BorderThickness="0">
                    <Image Source="Images/white_logo.png" Width="60"/>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Foreground="#FFFFFF"
                           Text="Login to aurora!"
                           VerticalAlignment="Center"
                           FontSize="50"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="20"/>
                <Button Grid.Row="2"
                        Height="50"
                        Width="200"
                        Style="{DynamicResource SubmitButtonTheme}"
                        Background="#F5F9FF"
                        BorderThickness="0">
                    <TextBlock Foreground="Black"
                               Text="Submit"
                               FontSize="30"
                               FontWeight="Bold"/>
                </Button>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <userControls:ClearableTextBox Grid.Row="1"
                                                   PlaceHolder="Password"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Height="60"
                                                   Width="500"
                                                   Margin="20,0,0,0"/>
                    <userControls:ClearableTextBox Grid.Row="0"
                                                   PlaceHolder="Username"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Height="60"
                                                   Width="500"
                                                   Margin="20,0,0,0"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
